<form action="/todos/{{todo.id}}/delete?_method=DELETE" method="POST">
  <div class="input-group">
    <div class="input-group-prepend">
      <div class="input-group-text">
        <input type="checkbox" name="done" {{#if todo.done}}checked{{/if}} disabled>
      </div>
    </div>

    <input type="text" class="form-control" name="name" placeholder="name" value="{{todo.name}}" disabled>

    <div class="input-group-append">
      <a class="btn btn-secondary" href="/">Back</a>
      <a class="btn btn-success" href="/todos/{{todo.id}}/edit">Edit</a>
      <button type="submit" class="btn btn-danger">Delete</button>
    </div>
  </div>
</form>