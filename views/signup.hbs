<div class="row">
  <div class="col-8 col-md-6 col-lg-4 mx-auto">
    <div class="card">
      <div class="card-body">
        <h1 class="card-title text-center mb-3">Sign Up</h1>
        {{> alert}}
        {{!-- 表單 --}}
        <form action="/users/signup" method="POST">
          <div class="form-group">
            <input type="text" class="form-control" id="name" name="name" value="{{input.name}}" placeholder="名稱">
          </div>
          <div class="form-group">
            <input type="email" class="form-control" id="email" name="email" value="{{input.email}}"
              placeholder="sample@gmail.com *" required>
          </div>
          <div class="form-group">
            <input type="password" class="form-control" id="password" name="password" placeholder="密碼 (8~12位數) *"
              minlength="8" maxlength="12" required>
          </div>
          <div class="form-group">
            <input type="password" class="form-control" id="password2" name="password2" placeholder="確認密碼 *"
              minlength="8" maxlength="12" required>
          </div>
          <button type="submit" class="btn btn-primary btn-block">註冊</button>
        </form>

        <div class="border-bottom mt-3"></div>

        {{!-- OAuth btn --}}
        <div class="position-relative mt-3">
          <i class="fab fa-facebook-square fb-icon"></i>
          <a href="javascript:;" id="fb-btn" class="btn btn-primary btn-block">用 Facebook 繼續</a>
        </div>
        <div class="mt-4 text-center">
          <span>已有帳號?</span>
          <a href="/users/signin">登入</a>
        </div>
      </div>
    </div>
  </div>
</div>