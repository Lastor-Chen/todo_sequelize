<a href="/todos/new" class="btn btn-outline-primary mb-3">Create</a>

<ul class="list-group">
  {{#each todos}}
  <li class="list-group-item">
    <div class="row align-items-center">
      <div class="col-auto mr-auto">
        <input type="checkbox" name="done" {{#if this.done}}checked{{/if}} disabled>
        <h5 class="d-inline">{{this.name}}</h5>
      </div>
      <div class="col-auto">
        <a href="/todos/{{this.id}}" class="btn btn-secondary">Detail</a>
        <a href="/todos/{{this.id}}/edit" class="btn btn-success">Edit</a>
        <form action="/todos/{{this.id}}/delete?_method=DELETE" method="POST" class="d-inline">
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
      </div>
    </div>
  </li>
  {{/each}}
</ul>