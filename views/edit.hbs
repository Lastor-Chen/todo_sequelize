<form action="/todos/{{todo.id}}/edit?_method=PUT" method="POST">
  <div class="input-group">
    <div class="input-group-prepend">
      <div class="input-group-text">
        <input type="checkbox" name="done" {{#if todo.done}}checked{{/if}}>
      </div>
    </div>

    <input type="text" class="form-control" name="name" value="{{todo.name}}" placeholder="name">

    <div class="input-group-append">
      <button class="btn btn-success" type="submit">Finish</button>
      <a class="btn btn-secondary" href="/index">Cancel</a>
    </div>
  </div>
</form>